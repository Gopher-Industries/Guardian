<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="deakin.gopher.guardian.view.general.PatientListActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context="deakin.gopher.guardian.view.general.PatientListActivity">

        <ImageView
            android:id="@+id/patient_list_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="51dp"
            android:layout_marginTop="65dp"
            android:contentDescription="TODO"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/blue_menu" />


        <ImageView
            android:id="@+id/patient_list_head_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="24dp"
            android:contentDescription="TODO"
            app:layout_constraintStart_toEndOf="@+id/patient_list_company_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/man" />

        <ImageView
            android:id="@+id/patient_list_company_icon"
            android:layout_width="107dp"
            android:layout_height="107dp"
            android:layout_marginStart="142dp"
            android:layout_marginTop="24dp"
            android:contentDescription="TODO"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/act1" />


        <SearchView
            android:id="@+id/patient_list_searchView"
            android:layout_width="305dp"
            android:layout_height="64dp"
            android:layout_marginStart="24dp"
            android:background="@drawable/border"
            android:iconifiedByDefault="false"
            android:queryHint="Search patients by name/ID"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="144dp" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/filter_ic"
            tools:layout_editor_absoluteX="335dp"
            tools:layout_editor_absoluteY="142dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/patient_list_recycleView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/patient_list_searchView">

        </androidx.recyclerview.widget.RecyclerView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="410dp"
            android:layout_height="135dp"
            android:src="@drawable/item3_lost"
            tools:layout_editor_absoluteX="9dp"
            tools:layout_editor_absoluteY="492dp" />

        <ImageView
            android:layout_width="910dp"
            android:layout_height="150dp"
            android:src="@drawable/item2_list"
            tools:layout_editor_absoluteX="-244dp"
            tools:layout_editor_absoluteY="355dp" />


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop=""
            android:src="@drawable/edit_btn_ic"
            tools:layout_editor_absoluteX="335dp"
            tools:layout_editor_absoluteY="380dp" />

        <ImageView
            android:layout_width="400dp"
            android:layout_height="112dp"
            android:src="@drawable/item1_list"
            tools:layout_editor_absoluteX="9dp"
            tools:layout_editor_absoluteY="241dp" />

        <ImageView
            android:layout_width="84dp"
            android:layout_height="91dp"
            android:src="@drawable/edit_ic"
            tools:layout_editor_absoluteX="250dp"
            tools:layout_editor_absoluteY="249dp" />

        <ImageView
            android:layout_width="76dp"
            android:layout_height="90dp"
            android:src="@drawable/delete_ic"
            tools:layout_editor_absoluteX="323dp"
            tools:layout_editor_absoluteY="249dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </LinearLayout>

        <ImageView
            android:layout_width="430dp"
            android:layout_height="151dp"
            android:src="@drawable/rounded_bottom_bar"
            tools:layout_editor_absoluteX="-10dp"
            tools:layout_editor_absoluteY="806dp" />

        <ImageView
            android:layout_width="87dp"
            android:layout_height="76dp"
            android:src="@drawable/activty"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="816dp" />

        <ImageView
            android:layout_width="145dp"
            android:layout_height="88dp"
            android:src="@drawable/ptnt_bar_ic"
            tools:layout_editor_absoluteX="124dp"
            tools:layout_editor_absoluteY="804dp" />

        <ImageView
            android:layout_width="109dp"
            android:layout_height="84dp"
            android:src="@drawable/callander"
            tools:layout_editor_absoluteX="269dp"
            tools:layout_editor_absoluteY="804dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.drawerlayout.widget.DrawerLayout>
