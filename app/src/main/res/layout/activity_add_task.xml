<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.general.AddTaskActivity">

    <!-- Header Section with Blue Background and Gopher Logo -->
    <androidx.cardview.widget.CardView
        android:id="@+id/headerCard"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="0dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/TG_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Gopher Logo -->
            <ImageView
                android:id="@+id/gopherLogo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/gopher_logo"
                android:contentDescription="Gopher Logo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" />

            <!-- Page Title -->
            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Task"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/gopherLogo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Input Fields and Buttons -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Task Title Input -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task Title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/inputTaskTitle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter task title"
                android:background="@drawable/input_background"
                android:padding="12dp"
                android:layout_marginTop="4dp" />

            <!-- Task Description Input -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task Description"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/inputTaskDescription"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter task description"
                android:background="@drawable/input_background"
                android:padding="12dp"
                android:layout_marginTop="4dp" />

            <!-- Due Date Input -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Due Date"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/inputDueDate"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter due date"
                android:background="@drawable/input_background"
                android:padding="12dp"
                android:layout_marginTop="4dp" />

            <!-- Assign To Input -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assign To"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/inputAssignTo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter assignee name"
                android:background="@drawable/input_background"
                android:padding="12dp"
                android:layout_marginTop="4dp" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/buttonSubmitTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Task"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/TG_blue"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

