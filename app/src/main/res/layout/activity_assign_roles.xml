<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- No patient list assigned -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/unassignedPatientsRecyclerView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/light_gray" />

    <!-- Assigned area for nurses and caregivers -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Nurse 1 Assigned area -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nurse 1"
                    android:textStyle="bold"
                    android:padding="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/nurse1RecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@color/light_gray" />
            </LinearLayout>

            <!-- Additional allocation areas can be added repeatedly -->
        </LinearLayout>
    </ScrollView>

</LinearLayout>
