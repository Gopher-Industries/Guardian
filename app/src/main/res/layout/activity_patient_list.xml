<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="deakin.gopher.guardian.view.general.PatientListActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/patient_list_backgroud">

        <!-- Top Header Section -->
        <LinearLayout
            android:id="@+id/header_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:gravity="center"
            android:background="@color/blue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Horizontal Layout for Menu Icon and Profile -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Menu Icon -->
                <ImageView
                    android:id="@+id/menu_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_menu"
                    android:contentDescription="Menu Icon"
                    android:layout_marginEnd="16dp" />

                <!-- Spacer -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Gopher Logo -->
                <ImageView
                    android:id="@+id/gopher_logo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/gopher_logo"
                    android:contentDescription="Gopher Logo" />

                <!-- Spacer -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Profile Image -->
                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/profile"
                    android:contentDescription="Profile Image"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Title (Patient List Admin) -->
            <TextView
                android:id="@+id/title_patient_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Patient List (Admin)"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Existing Features: Search View -->
        <SearchView
            android:id="@+id/patient_list_searchView"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/white_rectangle_patient_list"
            android:iconifiedByDefault="false"
            android:queryHint="Search patients by name/ID"
            app:layout_constraintTop_toBottomOf="@id/header_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Patients Overview Section -->
        <TextView
            android:id="@+id/patients_overview_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:text="Patients Overview"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/patient_list_searchView"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Patient Details (Card 1) -->
        <LinearLayout
            android:id="@+id/patient_card_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/card_background"
            app:layout_constraintTop_toBottomOf="@id/patients_overview_label">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/profile_avatar_men" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/patient_name_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name: Daniel"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/patient_id_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID: 2345132"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/patient_location_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location: Medical Wing"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/button_view_patient_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="View"
                android:backgroundTint="@color/blue"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Patient Details (Card 2) -->
        <LinearLayout
            android:id="@+id/patient_card_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/card_background"
            app:layout_constraintTop_toBottomOf="@id/patient_card_1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/profile_avatar_men2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/patient_name_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name: Bob"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/patient_id_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID: 1234567"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/patient_location_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location: Section 8"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/button_view_patient_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="View"
                android:backgroundTint="@color/blue"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Patient Details (Card 3) -->
        <LinearLayout
            android:id="@+id/patient_card_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/card_background"
            app:layout_constraintTop_toBottomOf="@id/patient_card_2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/profile_avatar_women" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/patient_name_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name: Olivia"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/patient_id_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID: 3456789"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/patient_location_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location: Section A"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/button_view_patient_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="View"
                android:backgroundTint="@color/blue"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/patient_list_recycleView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/patient_card_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@id/nav_view"
        layout="@layout/navigation_view" />
</androidx.drawerlayout.widget.DrawerLayout>
