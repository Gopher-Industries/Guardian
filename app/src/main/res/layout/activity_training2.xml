<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainingActivity2"
    android:padding="16dp">

    <!-- ScrollView to allow scrolling through the content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Module 1 -->
            <TextView
                android:id="@+id/module1Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Module 1: Basic Caregiving Skills"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/module1Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="This foundational module is designed to introduce caregivers to the essential skills required for day-to-day caregiving."
                android:textSize="16sp" />

            <Button
                android:id="@+id/module1Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Module 1"
                android:layout_marginBottom="24dp"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="@android:color/white" />

            <!-- Module 2 -->
            <TextView
                android:id="@+id/module2Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Module 2: Advanced Medical Procedures"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/module2Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="This module provides in-depth training on more complex medical procedures caregivers may need to perform."
                android:textSize="16sp" />

            <Button
                android:id="@+id/module2Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Module 2"
                android:layout_marginBottom="24dp"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="@android:color/white" />

            <!-- Module 3 -->
            <TextView
                android:id="@+id/module3Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Module 3: Emotional Support and Communication"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/module3Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="This module focuses on the emotional and psychological aspects of caregiving."
                android:textSize="16sp" />

            <Button
                android:id="@+id/module3Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Module 3"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
