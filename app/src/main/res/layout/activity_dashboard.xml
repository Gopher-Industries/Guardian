<!-- activity_dashboard.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Dashboard Title -->
    <TextView
        android:text="My Dashboard"
        android:textSize="24sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"/>

    <!-- Task Summary Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5F5F5"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FFFFFF"
        android:clipToPadding="false"
        android:clipChildren="false">

        <TextView
            android:text="Today's Tasks"
            android:textSize="20sp"
            android:textColor="#444444"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/taskSummary"
            android:text="Loading tasks..."
            android:textSize="16sp"
            android:textColor="#666666"
            android:paddingTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Button to Navigate to Tasks List -->
    <Button
        android:id="@+id/buttonViewTasks"
        android:text="View All Tasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#007BFF"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:elevation="2dp"/>


    <!-- Button to open Logbook -->
    <Button
        android:id="@+id/buttonLogbook"
        android:text="Logbook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#00B894"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:elevation="2dp"/>

</LinearLayout>
