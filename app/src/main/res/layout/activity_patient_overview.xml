<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Health Data Section -->
        <TextView
            android:id="@+id/health_data_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Health Data"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <!-- Task History Section -->
        <TextView
            android:id="@+id/task_history_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task History"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <!-- API Data Section -->
        <TextView
            android:id="@+id/api_data_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="API Data"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

        <!-- Row 1: Blood Pressure and Glucose Level -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/image_blood_pressure"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:src="@drawable/blood_pressure_graph"
                android:contentDescription="Blood Pressure Graph"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/image_glucose_level"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:src="@drawable/glucose_level_graph"
                android:contentDescription="Glucose Level Graph"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Row 2: Oxygen Saturation and Heart Rate -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/image_oxygen_saturation"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:src="@drawable/o2_saturation_graph"
                android:contentDescription="Oxygen Saturation Graph"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/image_heart_rate"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:src="@drawable/patient_temperature_graph"
                android:contentDescription="Patient Temperature Graph"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Row 3: Pulse Rate and Respiration Rate -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/image_pulse_rate"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:src="@drawable/pulse_rate_graph"
                android:contentDescription="Pulse Rate Graph"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/image_respiration_rate"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:src="@drawable/respiration_rate_graph"
                android:contentDescription="Respiration Rate Graph"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
