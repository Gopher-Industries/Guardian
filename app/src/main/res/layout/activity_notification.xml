<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="deakin.gopher.guardian.view.general.NotificationsActivity">

    <!-- Header Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/headerCard"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardBackgroundColor="#0096C7"
        app:cardCornerRadius="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_bold"
            android:text="Notification"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/newNotificationsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New notifications"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerCard"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- New Notifications RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/newNotificationsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/newNotificationsLabel"
        app:layout_constraintBottom_toTopOf="@id/previousNotificationsLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp" />

    <!-- Previous Notifications Label -->
    <TextView
        android:id="@+id/previousNotificationsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous notifications"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/newNotificationsRecyclerView"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Previous Notifications RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/previousNotificationsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/previousNotificationsLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp" />

</LinearLayout>



