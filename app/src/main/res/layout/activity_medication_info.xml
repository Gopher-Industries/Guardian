<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1EDED">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:id="@+id/medicalDiaganosticsHeaderCardView"
            android:layout_width="425dp"
            android:layout_height="189dp"
            android:layout_marginTop="-40dp"
            app:cardBackgroundColor="@color/TG_blue"
            app:cardCornerRadius="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:translationZ="-20dp">
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/menuButton11"
            android:layout_width="33dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="60dp"
            android:contentDescription="TODO"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/menu_button" />


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/menu_button"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/gopher_logo"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="60dp"/>
        <TextView
            android:id="@+id/medicalDiagnosticsTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:translationZ="20dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/medication_details"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginBottom="16dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerGuardiansLogo" />


        <ImageView
            android:id="@+id/headerGuardiansLogo"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="123dp"
            android:contentDescription="TODO"
            app:layout_constraintBottom_toTopOf="@+id/medicalDiagnosticsTitleTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/profile_avatar_men"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationZ="20dp"
            android:fontFamily="@font/poppins_bold"
            android:text="John"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="310dp"
            app:layout_constraintTop_toTopOf="@+id/medicalDiaganosticsHeaderCardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/topCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="25sp"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="260dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/spinner_border">

                    <Spinner
                        android:id="@+id/dropdownSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="10dp"
                        android:background="@android:color/transparent"
                    />


            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="25sp"
                android:gravity="center"
                android:background="@color/off_white">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Supervised By"
                        android:textSize="18dp"
                        android:textStyle="bold"

                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="30dp"

                        android:layout_marginBottom="20dp"

                        android:background="@drawable/spinner_border">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Doctor Detail"
                            android:textSize="22dp"
                            android:layout_marginTop="9dp"
                            android:layout_marginLeft="90dp"/>

                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Madication Until"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"
                    />
                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_gravity="left"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/spinner_border">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="05"
                        android:textSize="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="25dp"
                        android:background="@android:color/transparent"/>

                    <ImageView
                        android:id="@+id/dropdownIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/baseline_keyboard_arrow_down_24"
                        android:padding="8dp"
                        android:layout_marginEnd="12dp"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/dropdownText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/medication_info"
                    android:textColor="@color/text_heading_color"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:padding="22dp"/>

                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-70dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/spinner_border">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="15"
                        android:textSize="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="25dp"
                        android:background="@android:color/transparent"/>

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/baseline_keyboard_arrow_down_24"
                        android:padding="8dp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="-50dp"
                    android:layout_marginEnd="48dp"
                    android:background="@drawable/spinner_border">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="2025"
                        android:textSize="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="9dp"
                        android:background="@android:color/transparent"/>

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/baseline_keyboard_arrow_down_24"
                        android:padding="8dp"
                        />
                </RelativeLayout>

                <TextView
                    android:id="@+id/circleText"
                    android:layout_width="40dp"
                    android:layout_height="48dp"
                    android:background="@drawable/circle_background"
                    android:text="Today"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="-50dp"/>



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Supervised By"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="40dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="40dp"

                        android:layout_marginBottom="20dp"

                        android:background="@drawable/spinner_border">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="9dp"
                            android:text="Patient normal, daily visit"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/500"
                            android:layout_marginStart="-50dp"
                            android:layout_marginTop="80dp"/>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/cardImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="16dp"
                android:background="#E28585"
                android:padding="5dp"

                android:src="@drawable/alert"

                android:contentDescription="Image description"/>

            <TextView
                android:id="@+id/cardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Urgent Medical Attention"

                android:textColor="@android:color/black"
                android:textSize="14sp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="16dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/cardImage2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="16dp"
                    android:background="#BBF2B5"
                    android:padding="5dp"

                    android:src="@drawable/b2"
                    android:contentDescription="Image description"/>

                <TextView
                    android:id="@+id/cardText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prescription_warning"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


 </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="16dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="16dp"
                    android:background="#BBF2B5"
                    android:padding="5dp"
                    android:src="@drawable/c1"
                    android:contentDescription="Allergies and Medications"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Requires hourly monitoring"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="16dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/cardImage3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="16dp"
                    android:background="#E3FCFD"
                    android:padding="5dp"
                    android:src="@drawable/hospital_patient_status"
                    android:contentDescription="Image description"/>

                <TextView
                    android:id="@+id/cardText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ask_doctor"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/needInfoText"
            android:text="@string/need_info"
            android:textColor="@color/text_heading_color"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:padding="16dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="16dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/cardImage4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="16dp"
                    android:background="#CBC6C6"
                    android:padding="5dp"
                    android:src="@drawable/doctor"
                    android:contentDescription="Image description"/>

                <TextView
                    android:id="@+id/cardText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ask_doctor"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="16dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/cardImage5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="16dp"
                    android:background="#E3FCFD"
                    android:padding="5dp"
                    android:src="@drawable/about"
                    android:contentDescription="Image description"/>

                <TextView
                    android:id="@+id/cardText5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/need_more_info"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

        <TextView

            android:layout_width="150dp"
            android:layout_height="48dp"
            android:background="@drawable/blue_button_rounded"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

