<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.general.PatientProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Top Header Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_header"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/blue_header_background"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Menu Icon -->
            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_menu"
                android:contentDescription="Menu Icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Page Title -->
            <TextView
                android:id="@+id/page_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patient Profile"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toEndOf="@id/menu_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/menu_icon"
                app:layout_constraintBottom_toBottomOf="@id/menu_icon"
                android:gravity="center" />

            <!-- Profile Picture -->
            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/profile_avatar_men"
                android:contentDescription="Profile Image"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toBottomOf="@id/menu_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Patient Details Section -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/top_header"
            app:layout_constraintBottom_toTopOf="@id/horizontalScrollView"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- First Name -->
                <TextView
                    android:id="@+id/first_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Daniel"
                    android:layout_marginBottom="16dp" />

                <!-- Middle Name -->
                <TextView
                    android:id="@+id/middle_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Middle Name"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/middle_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Steven"
                    android:layout_marginBottom="16dp" />

                <!-- Last Name -->
                <TextView
                    android:id="@+id/last_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Name"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bvarton"
                    android:layout_marginBottom="16dp" />

                <!-- Date of Birth -->
                <TextView
                    android:id="@+id/date_of_birth_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date_of_birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6/5/1980"
                    android:layout_marginBottom="16dp" />

                <!-- Medicare Number -->
                <TextView
                    android:id="@+id/medicare_no_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medicare Number"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/medicare_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5065 52179 6"
                    android:layout_marginBottom="16dp" />

                <!-- Western Affairs Number -->
                <TextView
                    android:id="@+id/western_affairs_no_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Western Affairs Number"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/western_affairs_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="L67MS0B004HQ"
                    android:layout_marginBottom="16dp" />
            </LinearLayout>
        </ScrollView>

        <!-- Tab Layout -->
        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/dataForViewTabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabGravity="center"
                    app:tabIndicatorColor="@color/TG_blue"
                    app:tabIndicatorHeight="4dp"
                    app:tabSelectedTextColor="@color/TG_blue"
                    app:tabTextAppearance="@style/TabLayoutTheme"
                    app:tabTextColor="@android:color/black" />
            </LinearLayout>
        </HorizontalScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:contentDescription="Delete"
            android:tint="@android:color/white"
            android:src="@drawable/delete_icon"
            app:layout_constraintBottom_toTopOf="@id/tab_buttons_container"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/colorAccent" />



        <!-- Tab Buttons Container -->
        <FrameLayout
            android:id="@+id/tab_buttons_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="8dp"
            android:elevation="4dp">

            <!-- Tab Buttons with Black Border -->
            <FrameLayout
                android:id="@+id/tab_buttons_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="4dp">

                <LinearLayout
                    android:id="@+id/tab_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@android:color/white"
                    android:padding="8dp">

                    <!-- Health Data Button -->
                    <TextView
                        android:id="@+id/health_data"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginHorizontal="16dp"
                        android:gravity="center"
                        android:minHeight="48dp"
                        android:minWidth="80dp"
                        android:padding="8dp"
                        android:text="Health Data"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:clickable="true"
                        android:focusable="true" />

                    <!-- Care Plan Button -->
                    <TextView
                        android:id="@+id/care_plan"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginHorizontal="16dp"
                        android:gravity="center"
                        android:minHeight="48dp"
                        android:minWidth="80dp"
                        android:padding="8dp"
                        android:text="Care Plan"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/task_history"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:minHeight="48dp"
                        android:padding="8dp"
                        android:text="Task History"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>

                <!-- Black Line as Border -->
                <View
                    android:id="@+id/tab_border"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black"
                    android:layout_gravity="top" />
            </FrameLayout>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@id/nav_view"
        layout="@layout/navigation_view" />
</androidx.drawerlayout.widget.DrawerLayout>


