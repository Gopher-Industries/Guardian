<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@android:color/white"
    app:strokeWidth="1dp"
    app:strokeColor="@color/light_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/task_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Task Title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/delete_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_delete"
                android:contentDescription="Delete"
                android:tint="@color/red" />

            <ImageView
                android:id="@+id/task_expand_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_expand_more"
                android:contentDescription="Expand"
                android:tint="@color/black"/>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/light_gray"
            android:visibility="gone"
            android:id="@+id/divider_line"/>

        <!-- Expandable Details -->
        <LinearLayout
            android:id="@+id/task_details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="12dp"
            android:background="@color/extra_light_gray"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/extra_light_gray"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/task_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="14sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/task_due_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Due Date"
                android:paddingTop="6dp"
                android:textSize="14sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/task_priority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Priority"
                android:paddingTop="6dp"
                android:textSize="14sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/task_assigned_nurse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assigned Nurse"
                android:paddingTop="6dp"
                android:textSize="14sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/task_patient_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Patient ID"
                android:paddingTop="6dp"
                android:textSize="14sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/task_completed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Completed"
                android:paddingTop="6dp"
                android:textSize="14sp"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
