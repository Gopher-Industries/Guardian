    <style name="Theme.TeamGuardians.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#673AB7</item> <!-- TG_blue -->
        <item name="colorPrimaryVariant">#E91E63</item>
        <item name="colorOnPrimary">#8BC34A</item>
        <item name="colorSecondary">#03DAC5</item>
        <item name="backgroundColor">#EF0808</item>
        <item name="colorOnBackground">#000000</item>
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
        <item name="android:navigationBarColor">#FFFFFF</item>
        <item name="android:statusBarColor">#005BBB</item>
    </style>

    <!-- TabLayout Theme -->
    <style name="TabLayoutTheme" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Selected TabLayout Theme -->
    <style name="TabLayoutSelectedTheme" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/TG_blue</item>
    </style>

    <!-- Day/Night Theme -->
    <style name="Theme.TeamGuardians.DayNight" parent="Theme.MaterialComponents.DayNight">
        <item name="android:windowBackground">@color/black_overlay</item> <!-- Dark Mode Background -->
    </style>

    <!-- Dark mode ButtonBar -->
    <style name="Widget.Theme.TeamGuardians.ButtonBar.Fullscreen1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/dark_primary_color</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="textAppearanceButton">@color/white</item>
    </style>

    <!-- Font Style for Poppins (Dark Mode) -->
    <style name="poppinsfontstyle1" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <!-- Menu Text Style -->
    <style name="menu_text_style" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Custom Autofill Text Appearance -->
    <style name="CustomAutofillTextAppearance">
        <item name="android:textSize">14sp</item>
    </style>

