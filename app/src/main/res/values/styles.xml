<resources>

    <!-- Legacy Theme (for older activities) -->
    <style name="Theme.TeamGuardians.DayNight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/deep_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Button bar -->
    <style name="Widget.Theme.TeamGuardians.ButtonBar.Fullscreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="textAppearanceButton">@color/white</item>
    </style>

    <!-- Fonts -->
    <style name="poppinsfontstyle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <!-- Calendar View -->
    <style name="CalenderViewCustom" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/light_blue_A200</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:weekNumberColor">@color/white</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Medium">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CalenderViewMonthCustomText" parent="android:TextAppearance.DeviceDefault.Medium">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Tabs -->
    <style name="TabLayoutTheme" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabLayoutSelectedTheme" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/TG_blue</item>
    </style>

    <!-- Menu text -->
    <style name="menu_text_style" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Autofill -->
    <style name="CustomAutofillTextAppearance">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
