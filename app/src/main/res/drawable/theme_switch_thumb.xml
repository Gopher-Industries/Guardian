<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When the switch is checked (night mode) -->
    <item android:drawable="@drawable/ic_moon" android:state_checked="false"/>
    <!-- When the switch is unchecked (light mode) -->
    <item android:drawable="@drawable/ic_sun" android:state_checked="true"/>
</selector>
